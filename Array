public class Main {
    public static void main(String[] args) {
        // Declare an array
        int[] numbers = new int[5];

        // Initialize elements
        for (int i = 0; i < numbers.length; i++) {
            numbers[i] = i * 2; // Assign double the index
        }

        // Print elements
        System.out.println("Array elements:");
        for (int num : numbers) {
            System.out.println(num);
        }
    }
}

