public class Main {
    public static void main(String[] args) {
        // Declare and Initialize a 2x2 Matrix (2D array)
        int[][] matrix = {
            {1, 2},  // First row
            {3, 4}   // Second row
        };

        // Accessing elements of the Matrix
        System.out.println("Element at row 0, column 0: " + matrix[0][0]); // Output: 1
        System.out.println("Element at row 1, column 1: " + matrix[1][1]); // Output: 4
    }
}

