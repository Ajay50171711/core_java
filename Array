package pride;
import java.util.*;
public class Array {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int a[] = new int[5];
		for(int i = 0 ;i < a.length;i++) {
			System.out.println("enter the "+i+" element");
			a[i]=sc.nextInt();
		}
		for(int num:a) {
			System.out.println(num);
		}
	}
}
